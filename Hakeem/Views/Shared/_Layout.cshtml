<body>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top " style="background-color: black;">
        <div class="container d-flex align-items-center justify-content-between">

            <h1 class="logo"><a href="index.html">Hakeem Nuskha</a></h1>
            <form action="@Url.Action("Search","Home")" method="post">
                <input type="text" name="search" placeholder="Enter to Search"/>
                <input type="submit" value="Search" class="btn btn-primary"/>
            </form>

            <nav id="navbar" class="navbar">
                <ul>
                    @if (Session["email"] != null)
                    {
                        if (Session["type"].ToString().Equals("Hakeem"))
                        {
                            <li><a class="nav-link scrollto active" href="@Url.Action("Nuskha","Nuskha")">Nuskha</a></li>
                            <li><a class="nav-link scrollto active" href="@Url.Action("Disease","Disease")">Disease</a></li>
                        }
                        <li><a class="nav-link scrollto" href="@Url.Action("Hakeem","Home")">Hakeem</a></li>
                        <li><a class="nav-link scrollto" href="#">@Session["name"]</a></li>
                        <li><a class="nav-link scrollto" href="@Url.Action("LogOut","Account")">LogOut</a></li>
                    }
                    else
                    {
                        <li><a class="nav-link scrollto" href="@Url.Action("SignIn","Account")">Sign In</a></li>
                        <li><a class="nav-link scrollto" href="@Url.Action("SignUp","Account")">Sign Up</a></li>
                    }

                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>
    </header>
